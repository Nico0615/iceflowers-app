<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEE6CE"
    android:padding="16dp">

    <!-- Top MENU title button -->
    <Button
        android:id="@+id/btnMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:backgroundTint="#99CDA9"
        android:textColor="@android:color/black"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp"
        android:textSize="16sp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Search bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="Search for foods or drinks"
        android:padding="10dp"
        android:background="@drawable/search_background"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/btnMenuTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Filter chips -->
    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/filterContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:showDividers="middle"
            android:divider="?android:attr/dividerHorizontal"
            android:dividerPadding="6dp">

            <TextView
                android:id="@+id/filter_all"
                style="@style/FilterChip"
                android:text="ALL"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/filter_foods"
                style="@style/FilterChip"
                android:text="FOODS"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/filter_pastries"
                style="@style/FilterChip"
                android:text="PASTRIES"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/filter_drinks"
                style="@style/FilterChip"
                android:text="DRINKS"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Loading spinner -->
    <ProgressBar
        android:id="@+id/loadingSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/filterScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:layout_marginTop="8dp" />

    <!-- Scrollable menu list -->
    <ScrollView
        android:id="@+id/menuScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:overScrollMode="always"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/loadingSpinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/menuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
